<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoBDD.Login"
             Title="Login"
             >

    <ScrollView>
        <VerticalStackLayout Padding="40,20,40,300" Spacing="25" VerticalOptions="CenterAndExpand">

            <Label Text="Inicio de Sesión"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <Entry x:Name="usuarioEntry"
                   Placeholder="Usuario"
                   HeightRequest="50"
                   BackgroundColor="WhiteSmoke"
                   TextColor="Black"
                   Margin="0,10,0,0"/>

            <Entry x:Name="contraEntry"
                   Placeholder="Contraseña"
                   IsPassword="True"
                   HeightRequest="50"
                   BackgroundColor="WhiteSmoke"
                   TextColor="Black"/>

            <Button Text="Iniciar Sesión"
                    Clicked="InicioSesionClicked"
                    BackgroundColor="Navy"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="15"
                    HeightRequest="50"
                    WidthRequest="200"
                    HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>